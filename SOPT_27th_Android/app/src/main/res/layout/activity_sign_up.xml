<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.signup.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_name_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_sign_up_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/InputFormTheme"
            android:text="@string/input_name_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/et_sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_name_title"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="이름을 입력해주세요"
            android:theme="@style/EditTextTheme"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_id_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/cl_input_name_form"
        app:layout_constraintTop_toBottomOf="@id/cl_input_name_form">

        <TextView
            android:id="@+id/tv_sign_up_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_id_title"
            android:theme="@style/InputFormTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/et_sign_up_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextTheme"
            android:hint="아이디를 입력하세요"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_id_title"
            app:layout_constraintStart_toStartOf="@id/tv_sign_up_id_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_password_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/cl_input_id_form"
        app:layout_constraintTop_toBottomOf="@id/cl_input_id_form">

        <TextView
            android:id="@+id/tv_sign_up_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_password_title"
            android:theme="@style/InputFormTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요"
            android:theme="@style/EditTextTheme"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/tv_sign_up_password_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_password_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AccentColorButtonTheme"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/cl_input_password_form"
        app:layout_constraintStart_toStartOf="@+id/cl_input_password_form"
        app:layout_constraintTop_toBottomOf="@id/cl_input_password_form" />


</androidx.constraintlayout.widget.ConstraintLayout>